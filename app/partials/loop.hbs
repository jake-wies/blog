{{!-- This is the post loop - each post will be output using this markup --}}
<div class="posts-container">
    {{#foreach posts}}
    <article class="{{post_class}} post-thumb">
        <div class="thumb-img" style="{{#if image}}background-image:url( {{image}} ){{/if}}">

        </div>
        <div class="post-content">
            <header class="post-header">
                <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            </header>
            <section class="post-excerpt">
                <p>{{excerpt words="26"}}...</p>
            </section>
            <footer class="post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM Do YYYY"}}</time>
                {{#if tags}}
                <div class="tags">
                  {{tags}}
                </div>
                {{/if}}
            </footer>
        </div>
    </article>
    {{/foreach}}
</div>

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
